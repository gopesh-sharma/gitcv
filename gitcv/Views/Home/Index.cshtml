@model dynamic
@{
    ViewBag.Title = "GitCV - Get Details of the User";
}
<div class="jumbotron text-center">
    @using (Html.BeginForm())
    {
        <h1>GIT CV</h1>
        <p>We get you the Online CV of a git User</p>
        <form>
            <div class="input-group">
                <input type="search" id="loginName" name="loginName" class="form-control" size="50" placeholder="Search git by Username" required>
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-danger">Search</button>
                </div>
            </div>
        </form>
        
        if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="label-danger">@ViewBag.ErrorMessage</div>
        }
        
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <img src="~/Content/images/github.png" class="img-responsive center-block" />
            </div>
        </div>
     }
</div>
